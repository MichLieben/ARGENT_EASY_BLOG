<div class="container-fluid">
  <div class="container-money">
    <h2 class="size23px padding15-45 margin-bottom20">ARTICLES RÃ‰CENTS</h2>
    <div class="container-post">
    <% @posts.each do |post| %>
      <div class="container-post-side col-xs-12 col-sm-6">
        <div class="index-image">
          <%= link_to image_tag(post.image), post_path(post) %>
        </div>
        <h3 class="size18px"><%= link_to post.title, post_path(post), class: "no-decoration" %></h3>
        <p class="date-money"><%= post.created_at.strftime('%b %d, %Y') %> | <i><%= link_to post.category, posts_path(category: post.category), class: "no-decoration-color-grey" %></i></p>
        <div class="body-post">
          <%= raw post.body.truncate(358, separator: /\n/, omission: '') %>
        </div>
        <%= link_to "LIRE PLUS", post_path(post), class: "add-turquoise" %>
        <br>
      <% if admin_signed_in? %>
        <%= link_to "Show", post_path(post), class: "white-font" %>
        <%= link_to "Edit", edit_post_path(post), class: "white-font" %>
        <%= link_to "Delete", post_path(post), class: "white-font", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>

      </div>
    <% end %>
    </div>
  </div>
</div>

